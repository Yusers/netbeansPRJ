<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>EncoderFilter</filter-name>
        <filter-class>filters.EncoderFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ValidationFilter</filter-name>
        <filter-class>filters.ValidationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>testFilter</filter-name>
        <filter-class>filters.testFilter</filter-class>
    </filter>
    <filter>
        <filter-name>WarningFilter</filter-name>
        <filter-class>filters.WarningFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WarningFilter</filter-name>
        <servlet-name>GoodbyeServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>testFilter</filter-name>
        <servlet-name>Servlet2</servlet-name>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidationFilter</filter-name>
        <servlet-name>saveAccountServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EncoderFilter</filter-name>
        <servlet-name>saveAccountServlet</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>saveAccountServlet</servlet-name>
        <servlet-class>controllers.saveAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>controllers.Servlet1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>controllers.Servlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoodbyeServlet</servlet-name>
        <servlet-class>controllers.GoodbyeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveAccountServlet</servlet-name>
        <url-pattern>/saveAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/Servlet1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/Servlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoodbyeServlet</servlet-name>
        <url-pattern>/GoodbyeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
